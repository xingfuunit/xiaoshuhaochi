<script>
	$(".liststyle1 li:even").addClass("tabEven"); 
	 function pingorder(){  
	 	if(confirm('确认发货')){
   	     $('#loading').show();  
   		   var url = siteurl+'/index.php?controller=wxsite&action=shopcontrol&controlname=sendorder&orderid=<{$order['id']}>&datatype=json&random=@random@';   
 	        $.ajax({ 
           dataType: "json",  
           url: url.replace('@random@', 1+Math.round(Math.random()*1000)),  
           success: function(content) {    
           	 if(content.error == false) 
          	{  
          		$('#orderstatus').text('已发货'); 
          		$('.cart_gojs').remove();
          		$('#loading').hide();
          	}else{ 
          			Tmsg(content.msg);
          		  $('#loading').hide();
          	}  
          	 
	         }, 
           error: function(content) {  
             	Tmsg('提交数据失败');
        	    $('#loading').hide();
	         }
       
         });  
     }
     return false;
   } 
   function dosuer(){
   	if(confirm('确认制作该订单')){
   	     $('#loading').show();  
   		   var url = siteurl+'/index.php?controller=wxsite&action=shopcontrol&controlname=domake&orderid=<{$order['id']}>&datatype=json&random=@random@';   
 	        $.ajax({ 
           dataType: "json",  
           url: url.replace('@random@', 1+Math.round(Math.random()*1000)),  
           success: function(content) {    
           	 if(content.error == false) 
          	{  
          		$('#showqueren').remove();
          		$('#showfahuo').show();
          		$('#loading').hide();
          	}else{ 
          			Tmsg(content.msg);
          		  $('#loading').hide();
          	}  
          	 
	         }, 
           error: function(content) {  
             	Tmsg('提交数据失败');
        	    $('#loading').hide();
	         }
       
         });  
     }
     return false;
   }
   function nodosuer(){
   	if(confirm('取消制作该订单')){
   	     $('#loading').show();  
   		   var url = siteurl+'/index.php?controller=wxsite&action=shopcontrol&controlname=unmake&orderid=<{$order['id']}>&datatype=json&random=@random@';   
 	        $.ajax({ 
           dataType: "json",  
           url: url.replace('@random@', 1+Math.round(Math.random()*1000)),  
           success: function(content) {    
           	 if(content.error == false) 
          	{  
          		$('#orderstatus').text('商家不制作该订单'); 
          		$('#showqueren').remove();
          		$('#showfahuo').remove();
          		$('#loading').hide();
          	}else{ 
          			Tmsg(content.msg);
          		  $('#loading').hide();
          	}  
          	 
	         }, 
           error: function(content) {  
             	Tmsg('提交数据失败');
        	    $('#loading').hide();
	         }
       
         });  
     }
     return false;
   }
</script>

