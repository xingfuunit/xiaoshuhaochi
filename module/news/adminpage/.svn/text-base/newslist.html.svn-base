 <{extends file="<{$tempdir}>/public/admin.html"}>
 <{block name=controlname}>新闻列表   <{/block}>
 <{block name=bodylist}>

          <div>

           <div class="tags">



          <div id="tagscontent">

            <div id="con_one_1">

              <div class="table_td">

              <form method="post" action="" onsubmit="return remind();" id="delform">

                  <table border="0" cellspacing="0" cellpadding="0" class="list" name="table" id="table" width="100%">

                    <thead>

                      <tr>
                        <th><input type="checkbox" id="chkall" name="chkall" onclick="checkall()"></th>
                         <th>id</th>
                         <th>标题</th>
                         <th>添加时间</th>
                         <th>所在分类</th>
                         <th>排序</th>
                         <th>操作</th>
                      </tr>

                    </thead>

                     <tbody>

                       <{load_data assign="list" table="news" showpage="true"    orderby = "id desc"}>
		                 	<{foreach from=$list['list'] item=items}>
                      <tr class="s_out" onmouseover="this.bgColor='#F5F5F5';" onmouseout="this.bgColor='ffffff';" bgcolor="#ffffff">
                        <td><input type="checkbox" name="id[]" value="<{$items['id']}>"></td>
                        <td><{$items['id']}></td>
                        <td> <{$items['title']}> </td>
                        <td><{$items['addtime']|date_format:"%Y-%m-%d %H:%M:%S"}></td>
                        <td>
                        	<{load_data assign="typeinfo" table="newstype" type="one" where="id='<{$items['typeid']}>'" fileds="name" }>
                        	<{$typeinfo['name']|default:''}>
                       </td>
                      <td><{$items['orderid']}></td>
                        <td>
                        	<a href="<{ofunc type=url link="/adminpage/news/module/addnews/id/<{$items['id']}>"}>" ><img src="<{$siteurl}>/templates/<{$tempdir}>/public/images/admin/edit.jpg"></a>
                        	<a onclick="return remind(this);" href="<{ofunc type=url link="/adminpage/news/module/delnews/id/<{$items['id']}>/datatype/json"}>"><img src="<{$siteurl}>/templates/<{$tempdir}>/public/images/admin/del.jpg"></a></td>
                      </tr>
                       <{/foreach}>

                    </tbody>

                  </table>

                <div class="blank20"></div>

                </form>

                <div class="page_newc">
                 	      <div class="select_page"><a href="#" onclick="checkword(true);">全选</a>/<a href="#" onclick="checkword(false);">全不选</a> <a onclick="return remindall(this);" href="<{ofunc type=url link="/adminpage/news/module/delnews/datatype/json"}>" class="delurl">删除</a>  <a href="<{ofunc type=url link="/adminpage/news/module/addnews"}>" class="delurl">添加新闻</a></div>
                       <div class="show_page"><ul><{$list['pagecontent']}></ul></div>
                 </div>

               <div class="blank20"></div>

              </div>

            </div>

          </div>

        </div>


  </div>

</div>
<{/block}>