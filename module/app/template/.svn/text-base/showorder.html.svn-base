<script>
	$(".liststyle1 li:even").addClass("tabEven"); 
	 function unorder(){  
	 	if(confirm('确认取消订单')){
   	     $('#loading').show(); 
   		   var url = siteurl+'/index.php?controller=order&action=userunorder&orderid=<{$order['id']}>&datatype=json&random=@random@';   
 	        $.ajax({ 
           dataType: "json",  
           url: url.replace('@random@', 1+Math.round(Math.random()*1000)),  
           success: function(content) {    
           	 if(content.error == false) 
          	{  
          		$('#orderstatus').text('已关闭'); 
          		$('.cart_gojs').remove();
          		$('#loading').hide();
          	}else{ 
          			Tmsg(content.msg);
          		  $('#loading').hide();
          	}  
          	 
	         }, 
           error: function(content) {  
             	Tmsg('提交数据失败');
        	    $('#loading').hide();
	         }
       
         });  
     }
     return false;
   }
