<div class="mainbody_02">
    <div class="sub_lf">
    <{load_data assign="list" table="newstype" where="displaytype=1 and parent_id=0" fileds="*"  limit=10 orderby="orderid asc"}> 
	         <{foreach from=$list['list'] key=mykey item=items}>    
	  <h1 style="background:#ff6931;"><{$items['name']}></h1>
	  <ul class="ul1">
	  	
	  	
	  	<{if $items['type'] == 2}>
	     	      <{load_data assign="list2" table="newstype"   fileds="*" where="parent_id=<{$items['id']}>" limit=20 }> 
	     	       <{foreach from=$list2['list'] item=itv}>    
	              <li><a href="<{ofunc type=url link="/site/newstype/id/<{$itv['id']}>"}>"  <{if $info['typeid'] == $itv['id']}>class="current"<{/if}>  ><{$itv['name']}></a></li> 
	             <{/foreach}> 
	     	      
	     	      
	     	  <{else}>
	  		      <{load_data assign="list2" table="news"   fileds="id,title,typeid" where="typeid=<{$items['id']}>" limit=20 }> 
            	  <{foreach from=$list2['list'] item=itv}>    
	              <li><a href="<{ofunc type=url link="/site/news/id/<{$itv['id']}>"}>" <{if $info['id'] == $itv['id']}>class="current"<{/if}> ><{$itv['title']}></a></li> 
	             <{/foreach}> 
	         <{/if}>
	  	
	  	
	  	
	  		 
	  </ul>
	    <{/foreach}>   
	 
	</div>
	<div class="right_01">
